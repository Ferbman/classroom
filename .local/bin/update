#!/usr/bin/env bash

set -Eeuo pipefail; shopt -s nullglob; unset CDPATH; IFS=$' \t\n'; cd "${0%/*}"/../.. || exit

CSS=lib/stylesheet

main() {
	pushd "$CSS" &>/dev/null

	wget https://necolas.github.io/normalize.css/latest/normalize.css -O normalize.css
	cat normalize.css solo.css syntax.css custom.css | sassc -t compressed >min.css

	popd &>/dev/null
}

main
